<h2>Update the drone</h2>
<form action="/drones/{{drone._id}}/edit" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input name="name" class="form-control" id="name" value="{{drone.name}}" />
  </div>
  <div class="mb-3">
    <label for="propellers" class="form-label">Propellers</label>
    <input
      name="propellers"
      type="text"
      class="form-control"
      id="propellers"
      value="{{drone.propellers}}"
    />
  </div>
  <div class="mb-3">
    <label for="maxSpeed" class="form-label">Max Speed</label>
    <input
      name="maxSpeed"
      type="text"
      class="form-control"
      id="maxSpeed"
      value="{{drone.maxSpeed}}"
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>