<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4 text-center">Create a New Drone</h2>

      <form action="/drones/create" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input class="form-control" type="text" name="name" required>
        </div>
        <div class="form-group">
          <label for="propellers">Propellers:</label>
          <input class="form-control" type="number" name="propellers" required>
        </div>
        <div class="form-group">
          <label for="maxSpeed">Max Speed (m/s):</label>
          <input class="form-control" type="number" name="maxSpeed" required>
        </div>
        <div class="form-group text-right">
          <button class="btn btn-primary mt-2" type="submit">Create Drone</button>
        </div>
      </form>
    </div>
  </div>
</div>